{
  "version": 2,
		"framework": null,
		"functions": {
				"python": {
						"runtime":"python3.8"
				}
  	},
  "buildCommand": "pip install --upgrade pip && pip install -r .nxc/requirements.txt && .nxc/nxc build -i .. -o ../public --lunr --commits",
  "outputDirectory": "public",
		"builds": [
				{
						"src": ".nxc/requirements.txt",
						"use": "@vercel/python",
						"config": {
								"maxLambdaSize": "50mb"
						}
				},
				{
						"src": ".nxc/nxc",
						"use": "@vercel/python",
						"config": {
								"maxLambdaSize": "50mb"
						}
				}
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
